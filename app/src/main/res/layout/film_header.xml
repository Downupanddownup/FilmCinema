<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/rl_film_header_body"
    android:background="@drawable/topguidbar">
<ImageView
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:id="@+id/iv_film_header_return"
    android:layout_marginLeft="20dp"
    android:scaleType="fitCenter"
    android:src="@drawable/return0arrow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv_film_header_title"
        android:layout_centerHorizontal="true"
        android:text="电 影"
        android:textSize="25dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_film_header_search"
        android:src="@drawable/search"
        android:scaleType="fitCenter"/>

</RelativeLayout>
