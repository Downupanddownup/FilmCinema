<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/iv_film0detail_finfor_background"
    android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="2dp"
            android:id="@+id/cv_film0detail_finfor_cv">
            <ImageView
                android:id="@+id/iv_film0detail_finfor_poster"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_film0detail_finfor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影：传火之剑"
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp"
            android:layout_toEndOf="@+id/cv_film0detail_finfor_cv"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film0detail_finfor_scord"
            android:text="9.9"
            android:textSize="40dp"
            android:textColor="@color/colorGreen"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film0detail_finfor_time"
            android:text="120分钟"
            android:layout_alignLeft="@+id/tv_film0detail_finfor_name"
            android:layout_below="@+id/tv_film0detail_finfor_name"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film0detail_finfor_date"
            android:text="2016.10.12日上映"
            android:layout_alignLeft="@+id/tv_film0detail_finfor_name"
            android:layout_below="@+id/tv_film0detail_finfor_name"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film0detail_finfor_type"
            android:text="动作/奇幻"
            android:layout_alignLeft="@+id/tv_film0detail_finfor_name"
            android:layout_below="@+id/tv_film0detail_finfor_name"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>
