<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/tv_pcenter_activity_title"
        android:text="影 迹"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_orange_light" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/v_pcenter_activity_view"
        android:layout_below="@+id/tv_pcenter_activity_title"
        android:background="@color/background_tab_pressed"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_pcenter_activity_view"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cv_pcenter_activity_order"
            android:clickable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_view2"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/pcenter_activity_order" />

                    <TextView
                        android:id="@+id/tv_pcenter_activity_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/iv_pcenter_activity_view2"
                        android:text="我的订单"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_order_next"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pcenter_activity_next" />
                </RelativeLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cv_pcenter_activity_critic"
            android:clickable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_view3"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/pcenter_activity_critic" />

                    <TextView
                        android:id="@+id/tv_pcenter_activity_critic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/iv_pcenter_activity_view3"
                        android:text="我的影评"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_critic_next"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pcenter_activity_next" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cv_pcenter_activity_collection"
            android:clickable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_view4"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/pcenter_activity_collection" />

                    <TextView
                        android:id="@+id/tv_pcenter_activity_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/iv_pcenter_activity_view4"
                        android:text="我的收藏"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_pcenter_activity_collection_next"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pcenter_activity_next" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</RelativeLayout>
